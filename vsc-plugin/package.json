{
  "name": "dddl",
  "displayName": "DDDL",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/worldiety/dddl.git"
  },
  "publisher": "worldiety",
  "description": "Fügt die Unterstützung für die worldiety domain driven design language hinzu.",
  "version": "0.0.17",
  "engines": {
    "vscode": "^1.67.0",
    "node": ">=12.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ddd",
    "onCommand:wdyspec.encodeXML",
    "onCommand:wdyspec.previewHTML",
    "onCommand:ddd.ExportHTML",
    "onCommand:ddd.GenerateGo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[ddd]": {
         "editor.semanticHighlighting.enabled": true
      }
    },
    "languages": [
      {
        "id": "ddd",
        "aliases": [
          "ddd"
        ],
        "extensions": [
          ".ddd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ddd",
        "scopeName": "source.ddd",
        "path": "./syntaxes/ddd.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "dddl.exportAsciiDoc",
        "title": "Encode as AsciiDoc",
        "category": "wdy"
      },
      {
        "command": "wdyspec.previewHTML",
        "title": "Vorschau",
        "category": "wdy"
      },
      {
        "command": "ddd.ExportHTML",
        "title": "als HTML exportieren",
        "category": "wdy"
      },
      {
        "command": "ddd.GenerateGo",
        "title": "generiere Go Code (in module-root/internal/<Kontext>)",
        "category": "wdy"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "8.1.0",
    "vscode-languageserver-protocol": "3.17.0"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "20.3.1",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "eslint": "8.43.0",
    "glob": "10.3.0",
    "mocha": "10.2.0",
    "typescript": "5.1.3",
    "vscode-test": "^1.5.0"
  }
}
